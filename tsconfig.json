{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
